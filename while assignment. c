#include <stdio.h>
int main() {
    int start;
    int stop;
    int next;
printf("Enter when to start: ");
    scanf("%d", &start);

    printf("Enter when to stop: ");
    scanf("%d", &stop);
    
    
    printf("Enter 1 for increment, -1 for decrement: ");
    scanf("%d", &next);
    
    if (next == 1) {
        while (start <= stop) {
            printf("%d\n", start);
            start++;  
        }
    }
    else if (next == -1) {
        while (start >= stop) {
            printf("%d\n", start);
            start--;  
        }
    }

    return 0;
}
